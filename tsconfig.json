{
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es5",

    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "noEmit": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "allowJs": true,

    "sourceMap": true,
    "removeComments": true,

    "strict": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,

    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,

    "baseUrl": "src",
    "paths": {
      "@pages/*": ["./pages/*"],
      "@common/*": ["./common/*"],
      "@routes/*": ["./routes/*"],
      "@store/*": ["./store/*"],
      "@services/*": ["./services/*"],
      "@assets/*": ["./assets/*"],
      "@styles/*": ["./styles/*"],
    },
  }
}
